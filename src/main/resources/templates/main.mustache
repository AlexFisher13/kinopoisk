<html>

<body>
    <div>
        <form method="post">
            <input type="text" name="name" placeholder="Введите фильм" />
            <input type="text" name="rating" placeholder="Рейтинг">
            <input type="text" name="year" placeholder="Год">
            <button type="submit">Добавить</button>
        </form>
    </div>
    <div>Список фильмов</div>
    {{#films}}
        <div>
            <b>{{id}}</b>
            <span>{{name}}</span>
            <i>{{rating}}</i>
            <i>{{year}}</i>
        </div>
        {{/films}}
</body>
</html>